<div class="w-full bg-gray-50 h-screen">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div id="categories" class=" py-8">
    <%= render "category" %>
  </div>
  <%= link_to 'Add New category', new_category_path, class: "fixed bottom-0 w-full p-5 tracking-wider bg-secondary-green text-center uppercase text-white block font-medium text-sm" %>
</div>
